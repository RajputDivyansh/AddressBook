   <body style=" background-image: url('/images/wall.jpg'); background-repeat: no-repeat;">
      <div >
         <div class="header">
            <p style="font-size:60px; color: red; margin-top: 100px; font-family: 'freestyle script'">
               Address Book
            </p>
         </div>

         <div class="container" id="grad1">
            <div class="container" id="grad">
               <div class="heading">
                  <p>
                     <span
                        style="font-size: 20px; color: red;font-family: romantic; margin-left: 70px;">
                        Sign Into Your Account</span>
                  </p>
               </div>

               <form action="/login" method="post">
                  <!-- <div class="imgcontainer">
                     <img src="Images/avatar.png" alt="Avatar" class="avatar" />
                  </div> -->
                  <br>

                  <div class="form-group">
                     <label for="uname">
                        <b> 
                           <span
                              style="margin-left: 18px; font-size: 17px; color: #737373;">
                              Email:</span>
                        </b>
                     </label>
                     <br/>
                     <input
                        type="email" placeholder="Enter Email" name="email" required/>
                     <br />
                  </div>

                  <div class="form-group">
                     <label for="psw">
                        <b>
                           <span
                              style="margin-left: 18px; font-size: 17px; color: #737373;"></span>
                              Password:</span>
                        </b>
                     </label>
                     <br />
                     <input
                        type="password"
                        placeholder="Enter Password"
                        name="passwd"
                        id="pwd"
                        required />
                     <p id="caps">WARNING! Caps lock is ON.</p>
                     <br />
                  </div>
                  <span
                     style="margin-left: 21px; font-size: 14px; color: #737373"
                     ><input type="checkbox" onclick="showpwd()" />Show
                     Password</span>
                  <br />
                  <button type="submit" class="a">
                     <span style="font-size: 16px;">Login</span>
                  </button>
                  <button
                     class="b"
                     onclick="document.getElementById('id01').style.display='block'">
                     <span style="font-size: 16px;">Sign Up</span>
                  </button>
               </form>
            </div>
         </div>

         <!--<div class="footer">
<p>Work in Progress ;)</p>
</div>
-->

         <div id="id01" class="modal">
            <span
               onclick="document.getElementById('id01').style.display='none'"
               class="close"
               title="Close Modal">&times;
            </span>
            
            <form class="modal-content" action="/signup " method="post">
               <div class="container">
                  <div class="row">
                     <div class="main">
                        <h1>
                           <span style="margin-left: 200px;">Sign Up</span>
                        </h1>
                        <p>
                           <span style="margin-left: 17px;"
                              >Please fill in this form to create an
                              account.</span>
                        </p>

                        <div class="input-container">
                              <i class="fa fa-user icon"></i>
                              <label for="name">
                                 <span>
                                    <b>Name</b>
                                 </span>
                              </label>                          
                           </div>
                           <br />
                           <input class="e1" type="text" name="name"  placeholder="Enter Name" required />
                           <br />

                        <div class="input-container">
                           <i class="fa fa-user icon"></i>
                           <label for="email">
                              <span>
                                 <b>Email</b>
                              </span>
                           </label>                          
                        </div>
                        <br />
                        <input class="e1" type="email" name="email"  placeholder="Enter Email" required />
                        <br />

                        <div class="input-container">
                              <i class="fa fa-user icon"></i>
                              <label for="email">
                                 <span>
                                    <b>Phone</b>
                                 </span>
                              </label>                          
                           </div>
                           <br />
                           <input class="e1" type="number" name="phone"  placeholder="Enter Phone Number" required />
                           <br />

                           <div class="input-container">
                           <i class="fa fa-key icon"></i>
                           <label for="psw">
                              <span>
                                 <b>Password</b>
                              </span></label>
                        </div>
                        <br />
                        <input
                           class="p1"
                           type="password"
                           placeholder="Enter Password"
                           name="psw"
                           id="pp"
                           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                           title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                           required />
                        <br />

                        <label>
                           <span style="margin-left: 17px;"
                              ><input
                                 type="checkbox"
                                 checked="checked"
                                 name="remember"
                                 style="margin-bottom:15px"
                              />
                              Remember me</span>
                        </label>

                        <p>
                           <span style="margin-left: 17px;">
                              By creating an account you agree to our
                              <a href="#" style="color:dodgerblue"
                                 >Terms & Privacy</a>
                              .</span>
                        </p>

                        <div class="clearfix">
                           <button
                              type="button"
                              onclick="document.getElementById('id01').style.display='none'"
                              class="cancelbtn"
                           >
                              Cancel
                           </button>
                              <button type="submit" class="signupbtn">
                                 Sign Up
                              </button>
                           </a>
                        </div>
                     </div>
                     <div class="side">
                        <div id="message">
                           <h3>Password must contain the following:</h3>
                           <p id="letter" class="invalid">
                              A <b>lowercase</b> letter
                           </p>
                           <p id="capital" class="invalid">
                              A <b>capital (uppercase)</b> letter
                           </p>
                           <p id="number" class="invalid">A <b>number</b></p>
                           <p id="length" class="invalid">
                              Minimum <b>8 characters</b>
                           </p>
                        </div>
                     </div>
                  </div>
               </div>
            </form>
         </div>
      </div>

      <script src="/javascript/login.js"></script>
   </body>
</html>
